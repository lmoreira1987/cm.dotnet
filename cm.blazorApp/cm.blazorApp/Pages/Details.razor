@page "/details/{ProductId:int}"
@using cm.blazorApp.Data
@using cm.blazorApp.Services
@inherits OwningComponentBase<ProductService>

<h3>Details</h3>

<br />
<h2 class="text-info">@(ShowAppointment ? "Book Appointment" : "Product Details")</h2>

@if (ShowAppointment)
{
    <cm.blazorApp.Pages.Components.AppointmentComponent OnClickShowDetails="OnClickShowDetails" appointment="appointment"></cm.blazorApp.Pages.Components.AppointmentComponent>
}
else
{
    <cm.blazorApp.Pages.Components.DetailsComponent OnClickShowAppointment="OnClickShowAppointment" appointment="appointment"></cm.blazorApp.Pages.Components.DetailsComponent>

}

@code {
    [Parameter]
    public int ProductId { get; set; }

    public Appointment appointment { get; set; }

    bool ShowAppointment = false;

    protected override void OnInitialized()
    {
        appointment = new Appointment()
        {
            AppointmentDate = DateTime.Now
        };
        appointment.Product = Service.GetProduct(ProductId);
    }

    void OnClickShowAppointment()
    {
        ShowAppointment = true;
    }

    void OnClickShowDetails()
    {
        ShowAppointment = false;
    }
}
